<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maroon"
    android:fillViewport="true">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo Kembali -->
        <ImageView
            android:id="@+id/btnKembali"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_home_24"
            android:contentDescription="Kembali"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Judul Halaman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class di C++"
            android:textColor="@color/ivory"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atribut dan Method di Class"
            android:textColor="@color/ivory"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atribut adalah variabel yang menyimpan data objek, sedangkan method adalah fungsi yang mendefinisikan perilaku objek. Atribut bisa bersifat private atau public untuk mengontrol akses, sementara method biasanya public agar bisa digunakan dari luar class."
            android:textColor="@color/ivory"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh Atribut dan Method"
            android:textColor="@color/ivory"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <!-- BLOK KODE 1 (pakai CDATA supaya karakter khusus aman) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/ivory"
            android:layout_marginBottom="12dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penjelasan: Method setData() memberikan nilai pada atribut private, sedangkan tampilkan() menampilkan isi atribut. Ini contoh penerapan enkapsulasi dan penggunaan atribut/method di class."
            android:textColor="@color/ivory"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh Praktis: Class Mahasiswa"
            android:textColor="@color/ivory"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contoh ini menggabungkan atribut, method, constructor, destructor, dan enkapsulasi dalam satu class lengkap."
            android:textColor="@color/ivory"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

        <!-- BLOK KODE 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/ivory"
            android:layout_marginBottom="12dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ivory"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>
