<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/maroon"
    android:padding="20dp">

    <!-- CARD UTAMA -->
    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="545dp"
        android:background="@drawable/bg_button_round"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- GAMBAR -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Robot"
            android:src="@drawable/ROBOT" />


        <!-- JUDUL -->
        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_maroon"
            android:text="Quiz Master\nChallenge"
            android:textAlignment="center"
            android:textColor="@color/ivory"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- DESKRIPSI -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_maroon"
            android:text="Uji kemampuanmu dalam C++ Class dan konsep OOP!"
            android:textAlignment="center"
            android:textColor="@color/ivory"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMulaiQuiz"
            android:layout_width="164dp"
            android:layout_height="59dp"
            android:background="@drawable/bg_maroon"
            android:gravity="center"
            android:padding="0dp"
            android:text="Mulai Quiz"
            android:textColor="@color/ivory"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPengertian"
            android:layout_width="164dp"
            android:layout_height="59dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_maroon"
            android:gravity="center"
            android:padding="0dp"
            android:text="Materi C++"
            android:textColor="@color/ivory"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRiwayat"
            android:layout_width="164dp"
            android:layout_height="59dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_maroon"
            android:gravity="center"
            android:padding="0dp"
            android:text="Riwayat Skor"
            android:textColor="@color/ivory"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- TEKS BAWAH -->
    <TextView
        android:layout_width="272dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_round"
        android:text="Belajar • Praktik • Kuasai!"
        android:textColor="@color/maroon_dark"
        android:gravity="center"
        android:textSize="14sp" />

</LinearLayout>
