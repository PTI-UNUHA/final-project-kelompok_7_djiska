<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maroon">

    <LinearLayout
        android:id="@+id/boxRegister"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@color/ivory"
        android:layout_centerInParent="true"
        android:elevation="6dp"
        android:gravity="center">

        <TextView
            android:text="Daftar"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/maroon"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="bg_edittext"
            android:fontFamily="sans-serif"
            android:hint="Nama Lengkap : ......"
            android:hintTextColor="@android:color/darker_gray"
            android:importantForAutofill="no"
            android:padding="14dp"
            android:textColor="@color/maroon"
            android:textSize="18sp"
            tools:ignore="HardcodedText,TextFields" />

        <EditText
            android:id="@+id/edtEmail"
            android:hint="Email : ......"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textColor="@color/maroon"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:hintTextColor="@color/design_default_color_error"
            android:background="bg_edittext"
            android:layout_marginBottom="18dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtPassword"
            android:hint="Password : ....."
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textColor="@color/maroon"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:hintTextColor="@android:color/darker_gray"
            android:background="bg_edittext"
            android:layout_marginBottom="26dp"/>

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="12dp"
            android:text="Masuk"
            android:textColor="@color/maroon_dark"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtMasuk"
            android:text="Sudah punya akun? Login"
            android:textColor="maroon"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <!-- Gambar Header -->
        <ImageView
            android:id="@+id/imgLeaderboardHeader"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ROBOT"
            android:scaleType="fitCenter"
            android:layout_marginBottom="@drawable/bg_maroon" />


    </LinearLayout>

</RelativeLayout>

